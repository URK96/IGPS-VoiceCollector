<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IGPS.Views.FirstVoiceSet.FirstVoiceSetInfoPage"
             xmlns:local="clr-namespace:IGPS"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <AbsoluteLayout>

            <StackLayout Orientation="Vertical" HorizontalOptions="Center"
                         AbsoluteLayout.LayoutBounds="0, .1, 1, .3"
                         AbsoluteLayout.LayoutFlags="All">
                <Label FontSize="Title" HorizontalTextAlignment="Center"
                       Text="{x:Static local:AppResources.VoiceFirstSet_Info_Title}" />
                <Label Margin="0, 100, 0, 0"
                       Text="{x:Static local:AppResources.VoiceFirstSet_Info_Message}" TextColor="OrangeRed" FontSize="Large" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <Button x:Name="FirstVoiceSetNextButton" IsEnabled="True" BackgroundColor="OrangeRed"
                    Text="{x:Static local:AppResources.VoiceFirstSet_NextButton_Next}" FontSize="Large" TextColor="White"
                    AbsoluteLayout.LayoutBounds=".5, .75, .7, .08"
                    AbsoluteLayout.LayoutFlags="All"
                    Clicked="FirstVoiceSetNextButton_Clicked"/>
        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>